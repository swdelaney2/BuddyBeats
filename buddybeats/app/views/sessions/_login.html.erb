<h1>Log-in</h1>
<div class="form-container">
<%= form_tag sessions_path do %>

  <p><%= label_tag :user_email %></p>
  <p><%= text_field_tag :user_email %></p>
  <p><%= label_tag :password %></p>
  <p><%= password_field_tag :password %></p>
    <p><p></p><%= link_to "Forgot your password?", new_password_reset_path %></p>
  <p><%= submit_tag "Log-in", :class => 'btn btn-default' %></p>
<% end %>
</div>
