<h1>Log-in</h1>

<div class="error"><%= @login_error %></div>
<p>
<%= form_tag sessions_path do %>
  <%= label_tag :user_email %>
  <%= text_field_tag :user_email %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <p><p></p><%= link_to "Forgot your password?", new_password_reset_path %></p>

  <%= submit_tag "Log-in", :class => 'btn btn-default' %>
<% end %>
