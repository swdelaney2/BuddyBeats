<% if !@owner %>
<% @deleteDisplay = "display:none" %>
<% else @deleteDisplay = '' %>
<% end %>

<h1><%= @playlist_title = session[:playlist_title] %></h1>
<em><%= @playlist_description = session[:playlist_description] %></em>
<div id="playlistLink">

</div>
<% @random = session[:playlist_hex] %>
<input type="text" name="playlist_url_share" value="http://localhost:3000/playlists/<%= @random %>" size="40" readonly="readonly" onclick="this.select()">

<%= @idsForPlaylist %>
<div id="fullSongList">
  <div class="table-responsive">
  <ol>
<table class="table table-hover">
<tr>
  <td></td>
  <td><strong>Title</strong></td>
  <td><strong>Submitted By</strong></td>
  <td style="<%= @deleteDisplay %>"><strong>Delete</strong></td>
</tr>

<% @idsForPlaylist = [] %>
<% @songs.each do |inc| %>
<% @idsForPlaylist.push(inc.youtube_id) %>

<tr>
  <td><img src="http://img.youtube.com/vi/<%=inc.youtube_id%>/mqdefault.jpg" height="90"></td>
  <td><li><%= inc.title %></td>
  <td><%= @all_accounts.find(inc.account_id).user_name %> </li></td>
  <td style="<%= @deleteDisplay %>">
      <%= link_to image_tag('delete-icon2.png'), song_path(inc),
                    method: :delete,
                    data: { "sweet-alert-confirm": "Are you sure you want to delete this song?" } %>
  </td>
</tr>

<% end %>
</ol></table>
</div>
</div>
<p></p><p>
    <form action="/songs/search/<%= @random %>">
      <input type="submit" value="Add Song to Playlist" class="btn btn-default">
    </form>

<% @formattedIDS = @idsForPlaylist.join(",") %>

<script type="text/javascript">
$( "#playlistLink" ).append( "<em>(<%= @idsForPlaylist.length %> songs)</em><p><a href='http://www.youtube.com/watch_videos?video_ids=<%= @formattedIDS %>' target='_blank'>Playlist Link</a>" );
</script>

<% if @songs == [] %>
<script type="text/javascript">
$('#fullSongList').hide();
</script>
<% end %>
